<Window x:Class="LordOfUltima.Views.UpdateTimeOption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Time Option" 
        Height="200"
        MaxHeight="200"
        Width="300" 
        MaxWidth="300"
        Closed="Window_Closed">
    
    <Grid Name="window_background">
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/options_menu.png"/>
        </Grid.Background>
        
        <Label Content="Ressources update time :" Margin="5,-115,0,0" Height="30"/>
        <TextBox TextAlignment="Right" Name="time_choice" Margin="10,-80,90,0" Height="20" PreviewTextInput="time_choice_PreviewTextInput" TextChanged="time_choice_TextChanged"/>
        <Label Content="Seconds" Margin="210,30,0,0"/>
        <Button Name="one_second" Content="Second" Height="25" Width="60" Margin="-210,-20,0,0" Click="one_second_Click"/>
        <Button Name="one_minute" Content="Minute" Height="25" Width="60" Margin="-80,-20,0,0" Click="one_minute_Click"/>
        <Button Name="one_hour" Content="Hour" Height="25" Width="60" Margin="50,-20,0,0" Click="one_hour_Click"/>
        
        <Button Name="apply_button" Content="Apply" Margin="180,95,0,0" Height="25" Width="60" IsEnabled="False" Click="apply_button_Click"/>
        <Button Name="cancel_button" Content="Cancel" Margin="40,95,0,0" Height="25" Width="60" Click="cancel_button_Click" />
    </Grid>
</Window>
